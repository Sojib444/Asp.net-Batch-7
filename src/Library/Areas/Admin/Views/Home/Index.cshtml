
@{
    ViewData["Title"] = "Index";
}


@section Style
    {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}


<div class="row">
    <div class="col-6">
        <div class="card">
        <div class="card-header">
            <h3 class="card-title">Books</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
                    <table id="Book" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Writer</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
            </thead>
            <tfoot>
            <tr>
                <th>Name</th>
                <th>Writer</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
            </tfoot>
            </table>
        </div>
        <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Reader</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="Reader" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<partial  name="_ModelPartial" />





@section Scripts
{
    <!-- DataTables -->
    <script src="~/admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

    <script>
    $(document).ready(function()
    {

        $("#Book").DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Admin/Home/GetData",
                    
                     },
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": 3,
                        "render": function (data, type, row) {
                            return `<button type="submit" class="btn btn-info btn-sm" onclick="window.location.href='/Admin/Home/Edit/${data}'" value='${data}'>
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Edit
                                            </button>
                                            <button type="submit" class="btn btn-danger btn-sm show-bs-modal" data-id='${data}' value='${data}'>
                                                <i class="fas fa-trash">
                                                </i>
                                                Delete
                                            </button>`;
                        }
                    }
                ]
        });
            $('#Book').on('click', '.show-bs-modal', function (event) {
                var id = $(this).data("id");
                var modal = $("#modal-default");
                console.log(modal);
                modal.find('.modal-body p').text('Are you sure you want to delete this record?');
                $("#deleteId").val(id);
                $("#deleteForm").attr("action", "/Admin/Home/Delete");
                modal.modal('show');
                alert("Hi");
            });

            $("#deleteButton").click(function () {
                $("#deleteForm").submit();
            });
        
    })
</script>

}