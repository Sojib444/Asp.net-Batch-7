@model Reader

@{
    ViewData["Title"] = "Create";
}
<p class="text-danger">@ViewBag.Massage</p>
<p class="text-success">@ViewBag.Massage1</p>

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Reader</h4>
                <form asp-antiforgery="true" asp-area="Admin" asp-controller="Reader" asp-action="ReaderCreate" method="post" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" id="exampleInputUsername1" placeholder="Email">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-check form-check-flat form-check-primary">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input"> Remember me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>



